@model IEnumerable<IronBody.Models.AvaliacaoFisica>

<div id="divListaAvaliacaoFisica" class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Aluno")
            </th>
            <th>
                @Html.DisplayName("Instrutor")
            </th>
            <th>
                @Html.DisplayName("Data")
            </th>
            <th>
                @Html.DisplayName("Peso")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Alunos.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcionarios.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.peso)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
