@model IEnumerable<IronBody.Models.Agenda>

<div id="divListaAgenda" class="table-responsive">
    <table class="table" >
        <tr>
            <th>
                @Html.DisplayName("Responsavel")
            </th>
            <th>
                @Html.DisplayName("Data de Inicio")
            </th>
            <th>
                @Html.DisplayName("Atividade")
            </th>
            <th>
                @Html.DisplayName("Data de Fim")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcionarios.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.atividade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtFim)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
