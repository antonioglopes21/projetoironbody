@model IronBody.Models.Agenda

@{
    ViewBag.Title = "Agenda";
}

<h2>Cadastro</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Atividade", "Atividade", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.atividade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.atividade, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Data do Inicio", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.dtInicio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dtInicio, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Data do Fim", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.dtFim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dtFim, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Responsável", "Responsável", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.DropDownList("idProfessor", null, "Selecione um Responsável", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idProfessor, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.Label("Aluno", "Aluno", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.DropDownList("idAluno", null, "Selecione um Aluno", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idAluno, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" style="margin-top: 10px;margin-bottom: 44px;" />
            </div>
        </div>
    </div>
}
<div class="col-md-10">
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default", @style = "margin-top: -144px;margin-left: 80px;" })
</div>
