@model IronBody.Models.AvaliacaoFisica

@{
    ViewBag.Title = "Avaliação Física";
}

<h2>Deletar</h2>

<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>AvaliacaoFisica</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Aluno")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Alunos.nome)
        </dd>

        <dt>
            @Html.DisplayName("Instrutor")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funcionarios.nome)
        </dd>

        <dt>
            @Html.DisplayName("Data")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.data)
        </dd>

        <dt>
            @Html.DisplayName("Peso")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.peso)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Deletar" class="btn btn-primary" />
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
    </div>
    }
</div>
