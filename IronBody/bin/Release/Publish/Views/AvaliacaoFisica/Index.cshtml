@model IEnumerable<IronBody.Models.AvaliacaoFisica>

@{
    ViewBag.Title = "Avaliação Física";
}

<h2>Avaliação Física</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Index", "AvaliacaoFisica", FormMethod.Get))
        {
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Data", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("Data", null, new { @class = "form-control" })

            </div>
            <div class="col-md-3">
                @Html.Label("Aluno", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("Alunos", null, new { @class = "form-control" })

            </div>
            <div class="col-md-3">
                @Html.Label("Instrutor", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("Instrutor", null, new { @class = "form-control" })

            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary" style="margin-top: 23px;">Pesquisar</button>
            </div>

            <div class="col-md-1">
                <p>
                    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-default", @style = "margin-top: 23px;" })
                </p>
            </div>
        </div>
        }
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        @Html.Partial("_AvaliacaoFisica", Model)
    </div>
</div>