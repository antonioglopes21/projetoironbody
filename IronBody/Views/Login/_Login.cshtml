@model IEnumerable<IronBody.Models.Login>

<div id="divListaLogin" class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Alunos")
            </th>
            <th>
                @Html.DisplayName("Funcionários")
            </th>
            <th>
                @Html.DisplayName("Usuário")
            </th>
            <th>
                @Html.DisplayName("Senha")
            </th>
            <th>
                @Html.DisplayName("Tipo de Acesso")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Alunos.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcionarios.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.senha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tpacesso)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
