@model IronBody.Models.ContasReceber

@{
    ViewBag.Title = "Contas Receber";
}

<h2>Cadastro</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Aluno ", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("idAluno", null, "Selecione um Aluno", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idAluno, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Data do Vencimento", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.dtVencimento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dtVencimento, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Valor", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.Label("Desconto", "Desconto", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.desconto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.desconto, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Juros", "Juros", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.juros, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.juros, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Situação", "Situação", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.situacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.situacao, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Data do Pagamento", "Data do Pagamento", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.dtPagamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dtPagamento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" style="margin-top: 10px;margin-bottom: 44px;" />
            </div>
        </div>
    </div>
}

<div class="col-md-10">
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default", @style = "margin-top: -144px;margin-left: 80px;" })
</div>
