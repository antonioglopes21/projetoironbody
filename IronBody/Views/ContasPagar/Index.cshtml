@model IEnumerable<IronBody.Models.ContasPagar>

@{
    ViewBag.Title = "Contas a Pagar";
}

<h2>Contas a Pagar</h2>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Index", "ContasPagar", FormMethod.Get))
        {
        <div class="row">
            <div class="col-md-3 col-xs-6">
                @Html.Label("Data Vencimento", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.TextBox("DataVencimento", null, new { @class = "form-control" })

            </div>
            <div class="col-md-3 col-xs-6">
                @Html.Label("Data Pagamento", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.TextBox("DataPagamento", null, new { @class = "form-control" })

            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary"style="margin-top: 23px;">Pesquisar</button>
            </div>

            <div class="col-md-1">
                <p>
                    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-default", @style = "margin-top: 23px;" })
                </p>
            </div>
        </div>
        }
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        @Html.Partial("_ContasPagar", Model)
    </div>
</div>